{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-xs-12 col-xl-8 offset-xl-1 w-100 sup-frame p-5">
            <div class="d-flex justify-content-between align-items-center mb-5 color-first-color">
                <h1 class="color-third-color"><i class="fas fa-hashtag color-third-color"></i> Edit User</h1>
                <button id="editUserButton" type="submit" class="btn color-first-color d-flex justify-content-between align-items-center">
                                    <span class="fa-stack" style="vertical-align: top;">
                                      <i class="fas fa-circle fa-stack-2x"></i>
                                      <i class="fas fa-check fa-stack-1x fa-inverse"></i>
                                    </span>
                    Update
                </button>
            </div>

            <form id="editUser" method="post" action="{{ path('user_edit', {'id':user.id}) }}">

                <div class="container-fluid inf-frame">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 w-100">
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="lastName" class="mb-1">First name :</label>
                                    <input id="lastName"
                                           class="px-3"
                                           type="text"
                                           placeholder="{{ user.firstName }}" readonly />
                                </div>
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="firstName" class="mb-1">Last name :</label>
                                    <input id="firstName"
                                           class="px-3"
                                           type="text"
                                           placeholder="{{ user.lastName }}" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="email" class="mb-1">Email :</label>
                                    <input id="email"
                                           class="px-3"
                                           type="text"
                                           placeholder="{{ user.email }}" readonly />
                                </div>
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="organisation" class="mb-1">Organization :</label>
                                    <input id="organisation"
                                           class="px-3"
                                           type="text"
                                           placeholder="{{ user.organisation }}" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="old_solde" class="mb-1"> Balance :</label>
                                    <input id="old_solde"
                                           class="px-3"
                                           name="solde"
                                           type="number" value="{{ user.solde }}" />
                                </div>
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="action" class="mb-1">Action :</label>
                                    <select class="px-3" name="action" id="action">
                                        <option value="-1"></option>
                                        {% for a in actions %}
                                            <option montant="{% if not a.bonus %}-{% endif %}{{ a.prix }}" value="{{ a.id }}">{{ a.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="action" class="mb-1">Other greater :</label>
                                    <select class="px-3" name="users" id="benef">
                                        {% for u in users %}
                                            <option value="{{ u.id }}">{{ u.FirstName ~ ' ' ~ u.lastName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/user.js') }}" type="text/javascript"></script>
{% endblock %}