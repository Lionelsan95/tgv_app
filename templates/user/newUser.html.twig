{% extends 'base.html.twig' %}

{% block title %}Create new user{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-xs-12 col-xl-8 offset-xl-1 w-100 sup-frame p-5">
            <div class="d-flex justify-content-between align-items-center mb-5 color-first-color">
                <h1 class="color-third-color"><i class="fas fa-hashtag color-third-color"></i> Create new user</h1>
                <button id="create" type="submit" class="btn color-first-color d-flex justify-content-between align-items-center">
                                    <span class="fa-stack" style="vertical-align: top;">
                                      <i class="fas fa-circle fa-stack-2x"></i>
                                      <i class="fas fa-check fa-stack-1x fa-inverse"></i>
                                    </span>
                    Create
                </button>
            </div>

            <form id="subscribe" method="post" action="{{ path('admin_user_new') }}">

                <div class="container-fluid inf-frame">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 w-100">
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="lastName" class="mb-1">First name :</label>
                                    {{ form_widget(form.firstName) }}
                                </div>
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="firstName" class="mb-1">Last name :</label>
                                    {{ form_widget(form.lastName) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="email" class="mb-1">Email :</label>
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="organisation" class="mb-1">Organization :</label>
                                    {{ form_widget(form.organisation) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 d-flex flex-column mb-3">
                                    <label for="email" class="mb-1">Role :</label>
                                    <select name="role">
                                        <option value="ROLE_USER">User</option>
                                        <option value="ROLE_ADMIN">Admin</option>
                                    </select>
                                </div>
                            </div>
                            {{ form_row(form._token) }}
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/user.js') }}" type="text/javascript"></script>
{% endblock %}