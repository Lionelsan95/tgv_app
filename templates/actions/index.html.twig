{% extends 'base.html.twig' %}

{% block title %}Actions index{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-xs-12 col-xl-8 offset-xl-1 w-100 sup-frame p-5">
            <div class="d-flex justify-content-between align-items-center mb-5 color-first-color">
                <h1 class="color-third-color"><i class="fas fa-hashtag color-third-color"></i> Actions list </h1>
            </div>
            <a href="{{ path('actions_new') }}">Create</a>
            <div class="inf-frame">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for action in actions %}
                            <tr>
                                <td><a href="{{ path('actions_show', {'id': action.id}) }}">{{ loop.index }}</a></td>
                                <td>{{ action.nom }}</td>
                                <td>{{ action.bonus ? 'Bonus' : 'Malus' }}</td>
                                <td>{{ action.prix }}</td>
                                <td>
                                    <a href="{{ path('actions_edit', {'id': action.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
